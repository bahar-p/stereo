CC = g++
CFLAGS = -c
LIB = 
LFLAGS = 
BUILDPATH = ../build
GLFLAGS = -lGL -lglut -lGLU -lm
OPENCVINC = `pkg-config --cflags opencv`
OPENCVLIB = `pkg-config --libs opencv`

all: canny

canny: canny.o
	$(CC) -std=c++0x canny.o -o $(BUILDPATH)/canny $(OPENCVLIB) $(GLFLAGS)

canny.o: canny.cpp
	$(CC) -std=c++0x $(CFLAGS) $(GLFLAGS) $(OPENCVINC) canny.cpp

clean:
	rm -rf *.o *~
